<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.ReviewEntryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter Review"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="Entry_Review" 
                   HorizontalOptions="Center" 
                   HorizontalTextAlignment="Center"
                   WidthRequest="200" HeightRequest="200"/>
            <Button x:Name="Save_review" 
                    Clicked="SaveReview" HorizontalOptions="Center"
                    HeightRequest="50" WidthRequest="250"
                    FontAttributes="Bold" FontSize="15" 
                    BackgroundColor="Accent" 
                    BorderColor="Gold"
                    BorderWidth="2" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>